<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GabrielCTallerMAUI.Flexy"
             Title="Flexy">
    <FlexLayout Direction="Row"
            AlignItems="Center">
        <Label Text="FlexLayout in Action" MinimumWidthRequest="100" BackgroundColor="Pink"/>
        <Label Text="Another Label" Background="Purple"/>
        <VerticalStackLayout>
            <Button
                 x:Name="Boton1"
                 Text="Next Page" 
                 Clicked="B1_Clicked"
                 VerticalOptions="Center"
                 HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </FlexLayout>
</ContentPage>