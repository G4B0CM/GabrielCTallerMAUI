<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GabrielCTallerMAUI.MainPage">

    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label Text="Column 0, Row 0"
            BackgroundColor="Red"/>
            <Label Grid.Column="1"
           Text="Column 1, Row 0"  BackgroundColor="Green"/>
            <Label Grid.Row="1"
           Text="Column 0, Row 1"  BackgroundColor="Blue"/>
            <Label Grid.Column="1"
           Grid.Row="1"
           Text="Column 1, Row 1"  BackgroundColor="Yellow"/>
            <Button Grid.Row="2"
                    Grid.Column="1"
                x:Name="Boton1"
                Text="Next Page" 
                Clicked="B1_Clicked"
                    VerticalOptions="Center"
                HorizontalOptions="Center"
                />

        </Grid>
        
    </ScrollView>

</ContentPage>
